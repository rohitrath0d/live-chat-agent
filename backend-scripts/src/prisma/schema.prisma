generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
  // output   = "../../node_modules/.prisma/client"     // (Prisma updated documentation) -> In Prisma ORM 7, Prisma Client will no longer be generated in node_modules by default and will require an output path to be defined
  // engineType = "client"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")  ----> said to be moved in config file from prisma , and setted up there in v7
}

model Conversation {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  // metadata    Json?     // Optional: can store user info, source channel, etc.
  messages  Message[]

  @@index([createdAt])
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  sender         Sender
  text           String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

enum Sender {
  user
  ai
}


model FAQ {
  id        String   @id @default(uuid()) // Unique identifier for each FAQ entry
  question  String   @unique             // The question (e.g., "Do you ship internationally?")
  answer    String   // The corresponding answer
  createdAt DateTime @default(now())      // Automatically set to the current time when created
  updatedAt DateTime @updatedAt           // Automatically up
}